---
import { ViewTransitions } from 'astro:transitions';
import '@styles/blog.css';
import ArrowLeftIcon from '@icons/LeftArrowNav.astro';
interface Props {
    title: string;
    description?: string;
}

const { title } = Astro.props;

// const { frontmatter  } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			rel="alternate"
			type="application/rss+xml"
			title="Willinton's Blog"
			href={new URL("rss.xml", Astro.site)}
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body class="bg-[#17181c] text-white font-sans">

		<h3 class="fixed gap-x-2 h-20 w-full px-5 flex justify-start items-center top-0 -mt-2 text-sm font-bold tracking-wider uppercase text-transform-none text-white/7 bg-header z-10 m-0 left-0 "><a class="text-yellow-300 transition hover:contrast-125 hover:scale-105" href="javascript:history.back()">
		<ArrowLeftIcon class="size-10" />
		</a>{title}</h3>
		<main class="max-w-screen-md mx-auto mt-24">
            <slot />
        </main>
	</body>
</html>
