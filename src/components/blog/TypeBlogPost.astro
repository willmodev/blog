---
import  { Formatter } from '@utils/formatter';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
    post: CollectionEntry<'blog'>;
}

const { post, post: { data } } = Astro.props;

---

<div class="flex flex-col ">
    <Image transition:name={`${post.slug}-image`}  class="object-cover w-full h-56 rounded-lg " src={data.image} alt={data.title} width={500} height={500} quality={'low'} />

    <div class="flex flex-col justify-between py-6 ">
        <a href={`/posts/${post.slug}`} class="text-xl font-semibold text-gray-800 hover:underline dark:text-white ">
            {data.title}
        </a>
        <span class="text-sm text-gray-500 dark:text-gray-300">{ Formatter.formatDate(data.date)  }</span>
    </div>
</div>