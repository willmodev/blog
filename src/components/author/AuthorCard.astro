---
import { Image } from 'astro:assets';
import type { CollectionEntry } from "astro:content";
interface Props {
    author: CollectionEntry<"author">;
}

const {
    author,
    author: { data },
} = Astro.props;

---

<div class="max-w-lg mx-auto bg-secondary rounded-lg shadow-md p-5">
    <Image
        class="w-32 h-32 rounded-full mx-auto"
        src={data.avatar}
        alt="Profile picture"
        width={200}
        width={200}
    />
    <h2 class="text-center text-2xl font-semibold mt-3">{data.name}</h2>
    <p class="text-center text-gray-300 mt-1">{data.subtitle}</p>
    <div class="flex justify-center mt-5">
        <a href={data.twitter} class="hover:text-subtitle text-title mx-3"
            >Twitter</a
        >
        <a href={data.linkedin} class="hover:text-subtitle text-title mx-3"
            >LinkedIn</a
        >
        <a href={data.github} class="hover:text-subtitle text-title mx-3"
            >GitHub</a
        >
    </div>
    <div class="mt-5">
        <h3 class="text-xl font-semibold">Bio</h3>
        <p class="text-gray-300 mt-2">{data.bio}</p>
    </div>
    <div class="flex justify-end">
        <a class="text-title hover:text-subtitle" href={`/blog/${author.id}`}
            >Leer mas...</a
        >
    </div>
</div>
